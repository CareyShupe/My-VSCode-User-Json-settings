{
  /*
      This is my selections using Visual Studio Code
      as a primary editor for my Powershell scripts.
      My Visual Studio Code General Settings is a work in progress.
   */

  // ----------- Workbench UI Customizations ------------
  "workbench.colorTheme": "Aura Dracula Spirit", // Set the color theme to Aura Dracula Spirit.
  "workbench.iconTheme": "material-icon-theme", // Set the icon theme to Material Icon Theme.
  "material-icon-theme.hidesExplorerArrows": true, // Hide explorer arrows in Material Icon Theme.
  "workbench.editorAssociations": {
    // Associate file types with editors.
    "*.ps1": "default" // Associate .ps1 files with the default editor.
  },
  "workbench.tree.indent": 15, // Set the tree indent to 15.
  "workbench.tree.renderIndentGuides": "always", // Always render indent guides in the tree.
  "workbench.sideBar.location": "right", // Hide the status bar.
  "workbench.editor.showTabs": "multiple", // Disable showing Tabs.
  "workbench.editor.tabSizing": "shrink", // Set tab sizing to shrink.
  "workbench.layoutControl.enabled": false, // Disable layout control.
  "workbench.startupEditor": "none", // Disable startup editor.
  "workbench.tips.enabled": false,
  "workbench.settings.applyToAllProfiles": [
    "workbench.colorCustomizations",
    "editor.tokenColorCustomizations",
    "editor.semanticTokenColorCustomizations"
  ],
  // ----------- Comment Styling -----------
  "editor.tokenColorCustomizations": {
    "textMateRules": [
      {
        "scope": [
          // Change the scope to match the comment type you want to style
          "comment",
          "comment.block.documentation",
          "comment.line.double-slash",
          "comment.line.number-sign",
          "comment.block.documentation.string"
        ],
        "settings": {
          "foreground": "#00FF00", // Replace with your desired color (e.g., green),
          "fontStyle": "italic bold" // Optional: Add italic style to comments
        }
      }
    ]
  },

  // Overrides colors from the currently selected color theme.
  "workbench.colorCustomizations": {
    "editorSuggestWidget.selectedBackground": "#271a41", // Set the background color of the selected suggestion.
    "editor.lineHighlightBackground": "#202640",
    "editorLineNumber.activeForeground": "#ffff00",
    "editor.lineHighlightBorder": "#9fced11f",
    "editorBracketHighlight.foreground1": "#569CD6",
    "editorBracketHighlight.foreground2": "#C586C0",
    "editorBracketHighlight.foreground3": "#4EC9B0",
    "editorBracketHighlight.foreground4": "#CE9178",
    "errorLens.errorBackground": "#e4545410",
    "errorLens.errorForeground": "#ff646440",
    "errorLens.errorMessageBackground": "#e4545405",
    "errorLens.infoBackground": "#2472c810",
    "errorLens.infoForeground": "#2472c8B0",
    "errorLens.warningBackground": "#ff942f10",
    "errorLens.warningForeground": "#fa973a70",
    "errorLens.warningMessageBackground": "#fff00005",
    "list.activeSelectionBackground": "#271a41",
    "list.inactiveSelectionBackground": "#271a41",
    "list.focusBackground": "#271a41",
    "list.hoverBackground": "#271a41",
    "sideBar.background": "#271638", // Set the background color of the sidebar.
    "tab.lastPinnedBorder": "#2472c8",
    "terminalCursor.foreground": "#569cd6",
    "terminal.ansiBlack": "#000000",
    "terminal.ansiBlue": "#2472c8",
    "terminal.ansiBrightBlack": "#666666",
    "terminal.ansiBrightBlue": "#569cd6",
    "terminal.ansiBrightCyan": "#9cdcfe",
    "terminal.ansiBrightGreen": "#b5cea8",
    "terminal.ansiBrightMagenta": "#daadd6",
    "terminal.ansiBrightRed": "#f14c4c",
    "terminal.ansiBrightWhite": "#e5e5e5",
    "terminal.ansiBrightYellow": "#DCDCAA",
    "terminal.ansiCyan": "#11a8cd",
    "terminal.ansiGreen": "#6a9955",
    "terminal.ansiMagenta": "#C586C0",
    "terminal.ansiRed": "#cd3131",
    "terminal.ansiWhite": "#e5e5e5",
    "terminal.ansiYellow": "#CE9178",
    "terminal.background": "#3b353500",
    "terminal.foreground": "#D4D4D4",
    "tree.indentGuidesStroke": "#05ef3c", // Set the color of the indent guides in the tree.
    "testing.message.error.decorationForeground": "#cd3131",
    "testing.message.error.lineBackground": "#e4545405"
  },
  // ----------- Editor Customizations.
  "editor.minimap.enabled": false, // Disable minimap.
  "editor.guides.highlightActiveBracketPair": true, // Enable active bracket pair highlighting.
  "editor.guides.bracketPairs": "active", // Enable bracket pair guides.
  "editor.guides.bracketPairsHorizontal": true, // Enable horizontal bracket pair guides.
  "editor.matchBrackets": "near", // Match brackets near the cursor.
  "editor.guides.highlightActiveIndentation": false, // Disable highlight active indentation guides.
  "editor.guides.indentation": false, // Disable indentation guides.
  "editor.renderWhitespace": "none", // Disable render whitespace.
  "editor.renderControlCharacters": true, // Render control characters
  "editor.renderLineHighlight": "none", // Disable line highlight
  "editor.lightbulb.enabled": "off", // Show lightbulb off
  "editor.hover.enabled": true, // Enable hover
  "editor.showFoldingControls": "always", // Show folding controls
  "editor.semanticHighlighting.enabled": true, // Enable semantic highlighting.
  "editor.stickyTabStops": true, // Enable sticky tab stops.
  "editor.suggest.localityBonus": true, // Enable locality bonus for suggestions.
  "editor.suggest.preview": false, // Disable preview for suggestions.
  "editor.suggest.showStatusBar": true, // Show status bar for suggestions.
  "editor.suggestSelection": "first", // Show first suggestion by default.
  "editor.wordBasedSuggestions": "currentDocument", // Enable word based suggestions.
  "editor.tabCompletion": "on", // Enable tab completion.
  "editor.accessibilitySupport": "on", // Enable accessibility support.
  "editor.autoClosingQuotes": "languageDefined", // Auto closing quotes.
  "editor.autoClosingBrackets": "languageDefined", // Auto closing brackets
  "editor.autoSurround": "brackets", // Automatically surround selection with brackets
  "editor.codeActionsOnSave": {
    "source.organizeImports": "always", // Organize imports on save
    "source.fixAll": "always" // Fix all auto-fixable problems on save
  },
  "editor.autoIndent": "full", // Auto indent
  "editor.bracketPairColorization.enabled": true, // Enable bracket pair colorization
  "editor.bracketPairColorization.independentColorPoolPerBracketType": true, // Independent color pool per bracket type
  "editor.cursorBlinking": "expand", // Smooth cursor blinking
  "editor.cursorSmoothCaretAnimation": "on", // Smooth caret animation
  "editor.smoothScrolling": true, // Enable smooth scrolling
  "editor.detectIndentation": true, // Detect indentation
  "editor.foldingImportsByDefault": true, // Fold imports by default
  "editor.fontFamily": "CaskaydiaCove NF, CaskaydiaCove Nerd Font, JetBrainsMono Nerd Font, FiraCode Nerd Font, Cascadia Code PL, Consolas, monospace",
  "editor.fontLigatures": true, // Enable font ligatures
  "editor.fontSize": 14, // Set the font size
  "editor.fontWeight": "400", // Set the font weight
  "editor.formatOnPaste": true, // Format on paste
  "editor.formatOnSave": true, // Format on save
  "editor.formatOnType": true, // Format on type
  "editor.formatOnSaveMode": "modifications", // Format only modified lines on save
  "editor.inlayHints.enabled": "offUnlessPressed",
  "editor.inlayHints.fontSize": 12,
  "editor.inlineSuggest.enabled": true,
  "editor.lineHeight": 1.5,
  "editor.insertSpaces": false,
  "editor.quickSuggestions": {
    "comments": "on",
    "other": "off",
    "strings": "on"
  },
  "editor.parameterHints.enabled": true,
  "editor.rulers": [
    {
      "column": 120,
      "color": "#1f3a4066"
    }
  ],
  "editor.semanticTokenColorCustomizations": {
    "enabled": true,
    "rules": {
      "punctuation.section.bracket.end.powershell": "#569CD6",
      "*.variable": {
        "foreground": "#ffcc00"
      },
      "*.function": {
        "foreground": "#00ffcc",
        "bold": true
      },
      "*.keyword": {
        "foreground": "#ff6699",
        "italic": true
      }
    }
  },

  "editor.snippetSuggestions": "bottom", // Show snippet suggestions at the bottom
  "editor.tabSize": 2, // Set the tab size to 2 spaces
  "editor.useTabStops": true, // Use tab stops
  "editor.wordWrap": "on", // Enable word wrap.
  "editor.wordWrapColumn": 120, // Set the word wrap column
  "editor.dragAndDrop": true, // Enable drag and drop
  "editor.wrappingIndent": "same",
  "editor.columnSelection": false,
  "editor.suggest.snippetsPreventQuickSuggestions": false,
  "editor.scrollbar.vertical": "visible",
  "editor.scrollbar.horizontal": "visible",
  "editor.scrollbar.verticalScrollbarSize": 15,
  "editor.scrollbar.horizontalScrollbarSize": 15,
  "editor.overviewRulerBorder": false,
  "editor.suggest.showClasses": false,
  "editor.suggest.showConstants": false,
  "editor.suggest.showConstructors": false,
  "editor.suggest.showEnumMembers": false,
  "editor.suggest.showEnums": false,
  "editor.suggest.showEvents": false,
  "editor.suggest.showFields": false,
  "editor.linkedEditing": true,
  "editor.letterSpacing": -0.1,
  "editor.unicodeHighlight.nonBasicASCII": false,
  "editor.inlineSuggest.showToolbar": "always",
  "editor.inlineSuggest.syntaxHighlightingEnabled": true,
  "editor.defaultFormatter": "GitHub.copilot",
  "extensions.autoUpdate": true,
  "files.exclude": {
    "**/.classpath": true,
    "**/.factorypath": true,
    "**/.project": true,
    "**/.settings": true
  },
  "extensions.autoCheckUpdates": true,
  "files.trimFinalNewlines": true,
  // Trim trailing whitespace on save
  "files.trimTrailingWhitespace": true,
  // Automatically save files after a delay.
  "files.autoSave": "afterDelay",
  "files.dialog.defaultPath": "D:\\Projects",
  // The delay in milliseconds after which files will be saved automatically.
  // 10000 is equal to 10 seconds.
  "files.autoSaveDelay": 10000,
  // Always remember unsaved files, I'll explicitly close them if I don't want them
  "files.hotExit": "onExitAndWindowClose",
  // When enabled, the notifications for extension recommendations will not be shown.
  "extensions.ignoreRecommendations": true,
  // Open new windows maximized.
  "window.newWindowDimensions": "maximized",
  // Per Justin Grote, Hammers my system if I left a bunch of stuff open before. I'll open what I want.
  "window.restoreWindows": "none",
  // Easier way to distinguish between multiple windows
  "window.title": "${dirty}${remoteName}${separator}${rootName}${separator}${activeEditorShort}${separator}${appName}",
  "window.titleSeparator": " | ",
  // Show command launcher together with the window title.
  "window.density.editorTabHeight": "compact",
  // Show command launcher together with the window title.
  "window.commandCenter": false,
  // Controls the font family in the Debug Console.
  "debug.console.fontFamily": "default",
  // Honor E.G. .gitignore
  "search.useGlobalIgnoreFiles": true,

  "explorer.copyRelativePathSeparator": "/",
  "explorer.fileNesting.enabled": true,
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "explorer.fileNesting.patterns": {
    "*.js": "${capture}.js.map, ${capture}.min.js, ${capture}.d.ts",
    "*.jsx": "${capture}.js",
    "*.ps1": "${capture}.tests.ps1",
    "*.psm1": "${capture}.tests.ps1, ${capture}.psd1",
    "*.ts": "${basename}.spec.${extname}, ${capture}.js, ${basename}.test.${extname}",
    "*.tsx": "${capture}.ts",
    "package.json": "package-lock.json, .npmrc, yarn.lock, .yarnrc, pnpm-lock.yaml",
    "tsconfig.json": "tsconfig.*.json"
  },
  "files.associations": {
    ".denoflare": "jsonc",
    "*.json": "jsonc",
    "*.ps1": "powershell"
  },

  /*
      Powershell Settings
   */

  "terminal.integrated.profiles.windows": {
    "PowerShell": {
      "source": "PowerShell",
      "icon": "terminal-powershell"
    },
    "Command Prompt": {
      "path": [
        "${env:windir}\\Sysnative\\cmd.exe",
        "${env:windir}\\System32\\cmd.exe"
      ],
      "args": [],
      "icon": "terminal-cmd"
    },
    "Git Bash": {
      "source": "Git Bash"
    }
  },
  // Powershell is the default with 'new Item'
  "files.defaultLanguage": "pwsh",
  "editor.language.brackets": [
    ["{", "}"],
    ["(", ")"],
    ["#region", "#endregion"]
  ],
  // Powershell specific settings
  "[powershell]": {
    "files.encoding": "utf8",
    "files.autoGuessEncoding": true,
    "editor.formatOnSave": true,
    "editor.parameterHints.enabled": true,
    "editor.wordSeparators": "`~!@#$%^&*()-=+[{]}\\|;:'\",.<>/?"
  },

  "powershell.promptToUpdatePowerShell": false,
  "powershell.startAutomatically": true,
  "powershell.scriptAnalysis.enable": true,
  "powershell.codeFormatting.preset": "OTBS",
  "powershell.codeFormatting.addWhitespaceAroundPipe": true,
  "powershell.codeFormatting.alignPropertyValuePairs": true,
  "powershell.codeFormatting.autoCorrectAliases": true,
  "powershell.codeFormatting.avoidSemicolonsAsLineTerminators": true,
  "powershell.codeFormatting.ignoreOneLineBlock": false,
  "powershell.codeFormatting.newLineAfterCloseBrace": true,
  "powershell.codeFormatting.newLineAfterOpenBrace": true,
  "powershell.codeFormatting.openBraceOnSameLine": false,
  "powershell.codeFormatting.pipelineIndentationStyle": "IncreaseIndentationForFirstPipeline",
  "powershell.codeFormatting.trimWhitespaceAroundPipe": true,
  "powershell.codeFormatting.useCorrectCasing": true,
  "powershell.codeFormatting.whitespaceAfterSeparator": true,
  "powershell.codeFormatting.whitespaceAroundOperator": true,
  "powershell.codeFormatting.whitespaceBeforeOpenBrace": true,
  "powershell.codeFormatting.whitespaceBeforeOpenParen": true,
  "powershell.codeFormatting.whitespaceBetweenParameters": false,
  "powershell.codeFormatting.whitespaceInsideBrace": true,
  "powershell.integratedConsole.showOnStartup": false,
  "powershell.pester.codeLens": false,

  // ----------- Terminal Customizations.
  "terminal.integrated.hideOnStartup": "always",
  "terminal.integrated.persistentSessionReviveProcess": "never",
  "terminal.integrated.enablePersistentSessions": false,
  "terminal.integrated.tabs.showActiveTerminal": "never",
  "terminal.integrated.fontWeight": "normal",
  "terminal.integrated.fontWeightBold": "bold",
  "terminal.integrated.cursorStyle": "line",
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.cursorWidth": 1,

  /*
      Enable this experimental terminal Intellisense suggestions for supported shells (PowerShell) when
      `terminal.integrated.shellIntegration.enabled` is set to 'false'.
   */
  "terminal.integrated.suggest.enabled": true,

  // The minimum contrast ratio feature can cause colors to not be displayed as expected.
  "terminal.integrated.minimumContrastRatio": 1,
  "terminal.integrated.scrollback": 1000,
  "terminal.integrated.defaultProfile.windows": "PowerShell",
  "terminal.integrated.fontFamily": "CaskaydiaCove NF, CaskaydiaCove Nerd Font, JetBrainsMono Nerd Font, FiraCode Nerd Font, Cascadia Code PL, Consolas, monospace",
  "terminal.integrated.fontSize": 14,
  "terminal.integrated.mouseWheelZoom": true,
  "terminal.integrated.enableImages": true,
  "terminal.integrated.gpuAcceleration": "off",
  "security.workspace.trust.untrustedFiles": "open",
  "terminal.external.windowsExec": "C:\\Program Files\\PowerShell\\7\\pwsh.exe",
  "terminal.integrated.automationProfile.windows": {
    "path": "C:\\Users\\Carey.Shupe\\Documents\\PowerShell"
  },
  "terminal.explorerKind": "external",
  "settingsSync.ignoredSettings": [
    "editor.inlineSuggest.syntaxHighlightingEnabled"
  ],

  /*
      Git and GitHub Settings
   */

  "git.openRepositoryInParentFolders": "always",
  "git.enableSmartCommit": true,
  "git.autofetch": true,
  "editor.find.cursorMoveOnType": false,
  "vsicons.dontShowNewVersionMessage": true,
  "remote.defaultExtensionsIfInstalledLocally": [
    "GitHub.copilot",
    "GitHub.copilot-chat",
    "GitHub.vscode-pull-request-github"
  ],
  "window.openFoldersInNewWindow": "off",
  "window.openWithoutArgumentsInNewWindow": "off",
  "polyglot-notebook.defaultNotebookExtension": ".ipynb",
  "polyglot-notebook.defaultNotebookLanguage": "pwsh",
  "git-graph.repository.fetchAndPruneTags": true,
  "application.shellEnvironmentResolutionTimeout": 120,
  "gitlens.ai.model": "vscode",
  "gitlens.ai.vscode.model": "copilot:gpt-4.1",
  "git-autoconfig.configList": [
    {
      "user.email": "cwshupe@gmail.com",
      "user.name": "Carey Shupe"
    }
  ],

  /*
      Markdown Settings
   */

  "[markdown]": {
    "editor.defaultFormatter": "DavidAnson.vscode-markdownlint"
  },
  "markdown.preview.scrollEditorWithPreview": true,
  "markdown.preview.scrollPreviewWithEditor": true,
  "markdown.extension.orderedList.marker": "one",
  "markdown.extension.list.indentationSize": "inherit",
  "markdown.extension.toc.levels": "1..3",
  "markdown.extension.toc.orderedList": false,
  "markdownlint.config": {
    "default": true,
    "MD013": false, // disable line length warning
    "MD033": false // allow inline HTML
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "powershell.enableProfileLoading": false
}
